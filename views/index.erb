


<% if @profile %>
  <h3 id="bigName" class="field-values"><%= "#{@profile["first_name"]} #{@profile["last_name"]}"
    %></h3>

  <div id="dob"><%= dob_date = Date.parse @profile["dob"]
                          dob_date.strftime('%d %b %Y') %>
                          <p>(<%= kids_age(Date.parse(@profile["dob"])) %>)</p>

  </div>
  

  <table id="table-small">
     <tr> 
      <td><1111</td>
    </tr>
    <tr> 
      <td><%=  %> </td>
    </tr>
    <tr> 
      <td><%= @profile["web_track_completedness"] %> </td>
    </tr>
  </table>  


<!--my TODO to capitalize and replace underscores in field names-->
<!-- Question answers -->
  <% 
    ["about","rationale","projects","learning_experience","ambition","how_did_you_hear"].each do |y|
      item = @profile.select{|x| x==y}
      item.each do |field, value| 
  %>
    <div class="profile-section box"> 
      <h4 id="fieldname"><%= field %></h4>
      <p class="profile-value"><%= value %></p>
    </div>
  <%  end 
    end 
  %>


  <div id="stats" class="box">
    <h3>Stats</h3>
    <!-- TODO - Set the contents of this span with JavaScript -->
    <span id="word-count"></span> words found.
  </div>

  <div id="problems" class="box">
    <h3>Programming Problems</h3>
    <a href="/primes?limit=100">My Prime Number Solution</a>
  </div>

  <div class="box">
    <h3>Edit Profile</h3>

    <form action="/update" method="POST">
      <fieldset>
        <div class="form-group">
          <label for="trainee[about]">About</label>
          <input type="text" name="trainee[about]" value="<%= @profile["about"] %>"/>
          <!-- TODO - Add more fields so that your profile can be edited (try to do it dynamically) -->
           <label class="testlabel" for="trainee[ambition]">Ambition</label>
          <input class="inputbox" type="text" name="trainee[ambition]" value="<%= @profile["ambition"] %>"/>
        </div>
      
        

        <input type="submit" value="Update Profile" class="btn btn-primary" />
      </fieldset>
    </form>
  </div>
<% else %>
  <div class="welcome">
    <p>Welcome! Once you have updated the OAuth tokens, the link below will fetch your profile information.</p>

    <a href="/authorise">Authorise</a>
  </div>
<% end %>


